# Fichier d'exemple de configuration d'environnement
# Copiez ce fichier en .env et personnalisez les valeurs

# Configuration de l'environnement
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/animatech

# Configuration de la base de données
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=animatech
DB_USERNAME=root
DB_PASSWORD=

# Configuration de l'API TMDB
TMDB_API_KEY=your_api_key_here
TMDB_API_URL=https://api.themoviedb.org/3/

# Configuration des sessions
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Configuration du cache
CACHE_DRIVER=file
CACHE_PREFIX=animatech_
CACHE_LIFETIME=3600

# Sécurité
SESSION_SECRET=random_secure_hash 